{
  "name": "vue-ts",
  "version": "0.0.1",
  "description": "useful vue components written by vue3.2 and typescript",
  "author": "cirolee<ciromail@126.com>",
  "license": "MIT",
  "homepage": "https://github.com/CiroLee/vue-components",
  "repository": {
    "type": "git",
    "url": "https://github.com/CiroLee/vue-components.git"
  },
  "bugs": {
    "url": "https://github.com/CiroLee/vue-components/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint": "eslint --config .eslintrc.js",
    "lint:css": "stylelint src/**/*.{vue,css,sass,scss}",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{jsx,tsx,ts,js,json,vue,md}": [
      "eslint --config .eslintrc.js"
    ],
    "*.{vue,css,sass,scss}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "pinia": "^2.0.11",
    "reset-css": "^5.0.1",
    "vue": "^3.2.6",
    "vue-router": "^4.0.11"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "@vitejs/plugin-vue": "^2.2.4",
    "@vue/compiler-sfc": "^3.2.6",
    "autoprefixer": "^10.4.2",
    "commitlint": "^16.2.1",
    "eslint": "^8.10.0",
